<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>bimLogback</contextName>
    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%yellow(%d{yyyy-MM-dd HH:mm:ss.SSS}) %highlight(%5level) %red(---) [%green(%15.15thread)] %cyan(%-40.40logger{40}) %red(:) %msg%n</pattern>
        </encoder>
    </appender>
    <!-- Custom Log Configure -->
    <logger name="com.github.byakkili.bim.demo" level="DEBUG"/>
    <!--<logger name="io.netty.handler.logging.LoggingHandler" level="TRACE"/>-->
    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>